# ===========================================
# RAG Chatbot Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# Backend Configuration (backend/.env)
# ---------------------------------------------

# Gemini API Key for LLM and embeddings
GEMINI_API_KEY=your_gemini_api_key_here

# Neon Serverless Postgres connection URL
NEON_DATABASE_URL=postgresql://neondb_owner:your_password@your_host.neon.tech/neondb?sslmode=require

# Qdrant Cloud connection
QDRANT_URL=https://your_qdrant_cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# Qdrant collection name
QDRANT_COLLECTION_NAME=physical_ai_book

# Embedding settings
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSION=768

# LLM settings
LLM_MODEL=gemini-2.0-flash
LLM_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# ---------------------------------------------
# Frontend Configuration (Docusaurus)
# ---------------------------------------------

# Backend API URL for the chatbot widget
CHATBOT_API_URL=http://localhost:8000/api/chatbot
